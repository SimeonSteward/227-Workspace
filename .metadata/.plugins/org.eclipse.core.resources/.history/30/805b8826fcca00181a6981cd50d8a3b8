package mini1;

public class KeepMeInTheLoop {

	public static int findNth(String s, char ch, int n) {
		int b=0;
		for (int i = 0; i < s.length()-1; i++) {
			if (s.charAt(i)==ch) {
				b++;
				if (b == n) {
					return i;
				}
			}
		}
		return -1;
	}

	public static int findStoppingTime(int n) {
		if (n>0) {
			int i = 0;
			while (n!=1) {
				i++;
				if ((n%2)==0) {
					n/=2;
				}
				else {
					n=3*n+1;
				}
			}
			return i;
		} else {
			return -1;
		}
	}


